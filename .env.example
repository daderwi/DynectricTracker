# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/electric_prices
# Für SQLite: sqlite:///./database/electric_prices.db

# API Keys
ENTSO_E_API_KEY=your_entso_e_api_key_here
AWATTAR_API_KEY=your_awattar_api_key_here
TIBBER_API_KEY=your_tibber_api_key_here

# Redis (für Celery)
REDIS_URL=redis://localhost:6379

# App Settings
SECRET_KEY=your-secret-key-here
API_V1_STR=/api/v1
PROJECT_NAME="Dynamic Electric Price Tracker"

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:5000"]

# Logging
LOG_LEVEL=INFO

# Data Collection Settings
DATA_COLLECTION_INTERVAL=900  # 15 minutes in seconds
RETENTION_DAYS=365  # How long to keep historical data

# Smart Home (Future)
SMART_HOME_ENABLED=false
HOME_ASSISTANT_URL=http://localhost:8123
HOME_ASSISTANT_TOKEN=your_ha_token_here